<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/ll_usuarios"
    android:clickable="true">

    <TextView
        android:id="@+id/item_IdUsuarios"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtNombUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Usuario: "
                android:textStyle="bold"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/item_NombUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Nombre Usuario"
                android:textAlignment="center"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtNombReal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Nombre Real: "
                android:textStyle="bold"
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/item_NombReal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Roberto Gomez"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Email: "
                android:textStyle="bold"
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/item_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="aaaaaaaaaaaa@gmail.com"
                android:textColor="@color/grey" />
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtEstadoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Estado: "
                android:textStyle="bold"
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/item_EstadoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="ACTIVO"
                android:textStyle="italic"
                android:textColor="@color/grey"/>
        </LinearLayout>-->

    </LinearLayout>

</LinearLayout>