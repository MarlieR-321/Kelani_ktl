<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_categoria"
    android:clickable="true">

    <TextView
        android:id="@+id/item_IdCategoria"
        android:layout_width="53dp"
        android:layout_height="97dp"
        android:text="1"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/grey"
        android:textSize="52sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="34dp">

            <TextView
                android:id="@+id/TxtNombCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de Categoria: "
                android:layout_gravity="center"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_NombCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:hint="categoria"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtDescCategoria"
                android:layout_width="wrap_content"
                android:layout_gravity="center"

                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Descripcion: "
                android:textStyle="bold"
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/item_Descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:textSize="20sp"
                android:hint="descripcion"
                android:textColor="@color/grey"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>